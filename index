<body>
  <!-- PASTE YOUR HTML CODE HERE -->
  <div class="dosing-calculator">
    <h3 class="calculator-title">Find Your Starting Amount</h3>
    <p class="calculator-subtitle">Select your experience level:</p>
    
    <div class="button-container">
      <button onclick="showAmount('beginner')" class="experience-button">
        First-Timer or New to Edibles
      </button>
      
      <button onclick="showAmount('moderate')" class="experience-button">
        Some Experience with Edibles
      </button>
      
      <button onclick="showAmount('experienced')" class="experience-button">
        Regular Edibles User
      </button>
    </div>
    
    <div id="amountResult" class="result-container">
      <div class="result-content">
        <p class="result-label">Your Recommended Starting Amount:</p>
        <p id="amountText" class="amount-display"></p>
        <p id="tipText" class="tip-text"></p>
      </div>
    </div>
  </div>

  <script>
    // PASTE YOUR JAVASCRIPT CODE HERE
    const dosingData = {
      beginner: {
        amount: '2.5-5mg',
        tip: 'Start with ¼ to ½ of a standard 10mg gummy. Wait at least 90-120 minutes before considering more. Remember: you can always take more, but you can\'t take less.'
      },
      moderate: {
        amount: '5-10mg',
        tip: 'One standard gummy or half of a stronger product works well. Wait 2 hours before taking more to assess full effects.'
      },
      experienced: {
        amount: '10-15mg+',
        tip: 'Full gummies or potent formulations match your tolerance. Still practice the "start low, go slow" principle with new products.'
      }
    };

    function showAmount(level) {
      const result = document.getElementById('amountResult');
      const amountText = document.getElementById('amountText');
      const tipText = document.getElementById('tipText');
      
      if (!dosingData[level]) {
        console.error('Invalid experience level:', level);
        return;
      }
      
      const selected = dosingData[level];
      amountText.textContent = selected.amount;
      tipText.textContent = selected.tip;
      
      result.classList.add('show');
      result.style.display = 'block';
      
      result.scrollIntoView({ 
        behavior: 'smooth', 
        block: 'nearest' 
      });
    }

    function initCalculator() {
      console.log('Dosing calculator loaded');
      
      const buttons = document.querySelectorAll('.experience-button');
      buttons.forEach(button => {
        button.addEventListener('click', function() {
          buttons.forEach(btn => btn.style.opacity = '1');
          this.style.opacity = '0.8';
          setTimeout(() => {
            this.style.opacity = '1';
          }, 200);
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCalculator);
    } else {
      initCalculator();
    }
  </script>
</body>
